# このファイルをコピーして terraform.tfvars を作成してください
# cp terraform.tfvars.example terraform.tfvars

# ====================
# Vercel
# ====================
vercel_api_token  = "your-vercel-api-token"
vercel_team_id    = null  # 個人アカウントの場合は null
project_name      = "nextjs-sandbox"
github_repository = "your-username/nextjs-sandbox"
app_url           = "https://nextjs-sandbox.vercel.app"
custom_domain     = ""  # カスタムドメインがあれば設定

# ====================
# microCMS
# ====================
microcms_api_key = "your-microcms-api-key"

# ====================
# Better Auth
# ====================
# 生成方法: openssl rand -base64 32
better_auth_secret = "generate-with-openssl-rand-base64-32"

# ====================
# Neon Database
# ====================
# Neon ダッシュボードから接続文字列をコピー
database_url = "postgresql://username:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# ====================
# Google OAuth
# ====================
# Google Cloud Console で OAuth クライアントを作成
google_client_id     = "your-google-client-id.apps.googleusercontent.com"
google_client_secret = "your-google-client-secret"

# ====================
# Passkey
# ====================
passkey_rp_id   = "nextjs-sandbox.vercel.app"  # 本番ドメイン
passkey_rp_name = "Media"
